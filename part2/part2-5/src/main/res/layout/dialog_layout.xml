<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!--usb디버깅 허용을 묻는 레이아웃-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flower">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음에 한번 더 만들어줘도 될까요?"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"/>

        <!-- 텍스트뷰 key 입력칸을 위와 맞게 정렬하기위해 id를 가져온것을 확인하자-->
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="허용하는 key :"
            android:layout_below="@id/text1"
            android:layout_alignLeft="@id/text1" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(암호화되었음)17:AA:BB:77:88:DD:98:7E  "
            android:layout_below="@id/text2"
            android:layout_alignLeft="@id/text2"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나에게 항상 허용"
            android:layout_below="@id/text3"
            android:layout_alignLeft="@id/text3"/>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--android:text="==============================================="-->
            <!--/>-->



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>